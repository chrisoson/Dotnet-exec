{
  "tasks": 
  [
    {
      "name": "build",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "build" ]
    },
    {
      "name": "dotnet-format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "format", "--include" , "${staged}", "--no-restore" ],
      "include": [
        "**/*.cs"
      ]
    },
    {
      "name": "commit-message-linter",
      "group": "commit-msg",
      "command": "dotnet",
      "args": ["husky", "exec", ".husky/csx/commit-lint.csx", "--args", "${args}"]
    },
    {
      "name": "test",
      "group": "pre-push",
      "command": "dotnet",
      "args": [ "test" ],
      "exclude": [
        "**/*.md",
        "Dockerfile",
        "Dockerfile.*",
        "docs/**/*"
      ]
    }
  ]
}
