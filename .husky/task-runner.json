{
  "tasks": 
  [
    {
      "name": "build",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "build" ],
      "include": [
        "**/*.cs",
        "*.props",
        "*.targets",
        "*.csproj",
        "*.sln"
      ]
    },
    {
      "name": "format-verify",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "format", "--verify-no-changes", "--include" , "${staged}", "--no-restore" ],
      "include": [
        "**/*.cs",
        "*.props",
        "*.targets",    
        "*.csproj",       
        "*.sln"
      ]
    },
    {
      "name": "commit-message-linter",
      "group": "commit-msg",
      "command": "dotnet",
      "args": ["husky", "exec", ".husky/csx/commit-lint.csx", "--args", "${args}"]
    },
    {
      "name": "test",
      "group": "pre-push",
      "command": "dotnet",
      "args": [ "test" ],
      "include": [
        "**/*.cs",
        "*.props",
        "*.targets",
        "*.csproj",
        "*.sln"
      ]
    }
  ]
}
